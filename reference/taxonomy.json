          },
          "domain": {
            "type": "string",
            "enum": [
              "eventType",
              "placeType",
              "facility",
              "theme"
            ],
            "description": "Indicates to what domain the taxonomy term belongs.",
            "example": "facility"
          },
          "name": {
            "type": "object",
            "description": "Localized human-readable names of the term, as an object with languages as properties.",
