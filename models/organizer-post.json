  "properties": {
    "@id": {
      "$ref": "./organizer-@id.json"
    },
    "mainLanguage": {
      "$ref": "./organizer-mainLanguage.json"
    },
    "website": {
      "type": "string",
      "example": "https://www.publiq.be/",
      "pattern": "^http[s]?:\\/\\/",
      "description": "The unique url of the organizer."
    },
    "name": {
      "type": "string",
      "description": "The name of the organizer",
      "minLength": 1
    },
    "address": {
      "type": "object",
      "description": "The address of the organization",
      "properties": {
        "streetAddress": {
          "type": "string",
          "minLength": 1,
          "description": "Street address in the main language, for example `Wetstraat 1` for `nl`.",
          "example": "Wetstraat 1"
        },
        "postalCode": {
          "type": "string",
          "description": "Postal code of the municipality, for example `1000`. Formatted as a string because some international postal codes use letters.",
          "minLength": 1,
          "example": "1000"
        },
        "addressLocality": {
          "type": "string",
          "minLength": 1,
          "example": "Brussel",
          "description": "Municipality of the address in the main language, for example `Brussel` for `nl`."
        },
        "addressCountry": {
          "type": "string",
          "minLength": 1,
          "description": "Country code in the ISO-3166 format. For example `BE`.",
          "maxLength": 2,
          "pattern": "^[A-Z][A-Z]$",
          "example": "BE"
        }
      },
      "required": [
        "streetAddress",
        "postalCode",
        "addressLocality",
        "addressCountry"
      ]
    },
    "contactPoint": {
      "$ref": "./organizer-contactPoint.json"
    },
    "labels": {
      "$ref": "./organizer-labels.json"
    },
    "hiddenLabels": {
      "$ref": "./organizer-hiddenLabels.json"
