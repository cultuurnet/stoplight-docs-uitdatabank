{
  "title": "place.bookingInfo",
  "type": "object",
  "description": "Booking info of the [place](./place.json), containing one or more phone numbers, email addresses, and/or website URLs.",
  "properties": {
    "phone": {
      "type": "string",
      "description": "Phone number for booking purposes."
    },
    "email": {
      "type": "string",
      "description": "Email address for booking purposes.",
      "format": "email",
      "example": "info@example.com"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "example": "https://www.example.com",
      "description": "URL to a website for booking purposes."
    },
    "urlLabel": {
      "type": "object",
      "description": "Call-to-action text to show for the link to the booking url",
      "minProperties": 1,
      "examples": [
        {
          "nl": "Nederlandse tekst",
          "fr": "Texte français",
          "de": "Deutscher Text",
          "en": "English text"
        }
      ],
      "properties": {
        "nl": {
          "type": "string",
          "description": "Dutch description",
          "example": "Nederlandse beschrijving"
        },
        "fr": {
          "type": "string",
          "description": "French description",
          "example": "Description français"
        },
        "de": {
          "type": "string",
          "description": "German description",
          "example": "Deutscher Beschreibung"
        },
        "en": {
          "type": "string",
          "description": "English description",
          "example": "English description"
        }
      }
    },
    "availabilityStarts": {
      "description": "The date & time when the booking period starts",
      "type": "string",
      "format": "date-time",
      "example": "2021-05-17T22:00:00+00:00",
      "minLength": 1,
      "examples": [
        "2021-05-17T22:00:00+00:00"
      ]
    },
    "availabilityEnds": {
      "description": "The date & time when the booking period ends",
      "type": "string",
      "format": "date-time",
      "example": "2021-05-17T22:00:00+00:00",
      "minLength": 1,
      "examples": [
        "2021-05-17T22:00:00+00:00"
      ]
    }
  }
}
