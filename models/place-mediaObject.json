{
  "type": "array",
  "title": "place.mediaObject",
  "description": "A list of media objects related to the [place](./place.json), for example images.",
  "minItems": 1,
  "examples": [
    [
      {
        "@id": "https://io.uitdatabank.be/images/85b04295-479c-40f5-b3dd-469dfb4387b3",
        "@type": "schema:ImageObject",
        "contentUrl": "https://io-test.uitdatabank.be/images/example.png",
        "thumbnailUrl": "https://io-test.uitdatabank.be/images/example.png",
        "description": "Een voorbeeld beschrijving",
        "copyrightHolder": "Jan",
        "inLanguage": "nl"
      }
    ]
  ],
  "items": {
    "type": "object",
    "properties": {
      "@id": {
        "type": "string",
        "minLength": 1,
        "format": "uri",
        "pattern": "^http[s]?:\\/\\/",
        "example": "https://io.uitdatabank.be/place/85b04295-479c-40f5-b3dd-469dfb4387b3",
        "description": "A unique URI that acts as globally unique ID for the media object. Based on JSON-LD node identifiers. https://www.w3.org/TR/json-ld/#node-identifiers",
        "examples": [
          "https://io.uitdatabank.be/place/85b04295-479c-40f5-b3dd-469dfb4387b3"
        ],
        "readOnly": true
      },
      "@type": {
        "type": "string",
        "description": "Indicates the type of the media object. Currently only `schema:ImageObject` is supported (images).",
        "enum": [
          "schema:ImageObject"
        ],
        "readOnly": true
      },
      "contentUrl": {
        "type": "string",
        "description": "URL of the media object file.",
        "format": "uri",
        "pattern": "^http[s]?:\\/\\/",
        "example": "https://io-test.uitdatabank.be/images/example.png",
        "readOnly": true
      },
      "thumbnailUrl": {
        "type": "string",
        "description": "URL to a thumbnail image of the media object file.",
        "format": "uri",
        "pattern": "^http[s]?:\\/\\/",
        "example": "https://io-test.uitdatabank.be/images/example.png",
        "readOnly": true
      },
      "description": {
        "type": "string",
        "description": "Description of the media object, in the language used in the `language` property of the media object.",
        "pattern": "\\S",
        "minLength": 1
      },
      "copyrightHolder": {
        "type": "string",
        "description": "Name of the copyright holder of the media object.",
        "pattern": "\\S",
        "minLength": 1
      },
      "inLanguage": {
        "type": "string",
        "description": "Locale of text or speech used in the mediaObject or its description",
        "enum": [
          "nl",
          "fr",
          "de",
          "en"
        ],
        "example": "nl"
      }
    },
    "required": [
      "@id",
      "description",
      "copyrightHolder",
      "inLanguage"
    ]
  }
}