{
  "type": "array",
  "title": "organizer.image",
  "description": "Describes an array of images that are linked to an [organizer](./organizer.json)",
  "minItems": 1,
  "examples": [
    [
      {
        "@id": "https://io.uitdatabank.be/images/546a90cd-a238-417b-aa98-1b6c50c1345c",
        "id": "546a90cd-a238-417b-aa98-1b6c50c1345c",
        "contentUrl": "https://images.uitdatabank.be/546a90cd-a238-417b-aa98-1b6c50c1345c.jpeg",
        "thumbnailUrl": "https://images.uitdatabank.be/546a90cd-a238-417b-aa98-1b6c50c1345c.jpeg",
        "description": "Een voorbeeld beschrijving",
        "copyrightHolder": "Jan",
        "language": "nl"
      }
    ]
  ],
  "items": {
    "type": "object",
    "properties": {
      "@id": {
        "$ref": "./common-string-uri.json",
        "description": "A unique URI that acts as globally unique ID for the image object. Based on JSON-LD node identifiers. https://www.w3.org/TR/json-ld/#node-identifiers",
        "readOnly": true
      },
      "id": {
        "type": "string",
        "format": "uuid",
        "description": "The UUID of the image.",
        "example": "546a90cd-a238-417b-aa98-1b6c50c1345c"
      },
      "contentUrl": {
        "$ref": "./common-string-uri.json",
        "description": "URL of the image file.",
        "readOnly": true
      },
      "thumbnailUrl": {
        "$ref": "./common-string-uri.json",
        "description": "URL to a thumbnail image.",
        "readOnly": true
      },
      "description": {
        "type": "string",
        "minLength": 1,
        "pattern": "\\S",
        "description": "Description of the image object, in the language used in the `language` property of the image object."
      },
      "copyrightHolder": {
        "type": "string",
        "minLength": 3,
        "pattern": "\\S",
        "description": "Name of the copyright holder of the image."
      },
      "language": {
        "type": "string",
        "description": "Locale of text used in the image and its description.",
        "enum": [
          "nl",
          "fr",
          "de",
          "en"
        ],
        "example": "nl"
      }
    },
    "required": [
      "@id",
      "id",
      "contentUrl",
      "thumbnailUrl",
      "description",
      "copyrightHolder",
      "language"
    ]
  }
}
