{
  "title": "event.videos.post",
  "type": "object",
  "description": "Describes the request body to add a video to an event.",
  "examples": [
    {
      "url": "https://www.youtube.com/watch?v=cEItmb_a20D",
      "language": "nl",
      "copyrightHolder": "publiq"
    }
  ],
  "properties": {
    "url": {
      "type": "string",
      "format": "url",
      "example": "https://www.youtube.com/watch?v=cEItmb_a20D",
      "description": "The unique url of the video. Currently only Youtube and Vimeo sources are allowed.",
      "pattern": "^http(s?):\\/\\/(www\\.)?((youtube\\.com\\/watch\\?v=([^\\/#&?]*))|(vimeo\\.com\\/([^\\/#&?]*)))"
    },
    "language": {
      "type": "string",
      "example": "nl",
      "enum": [
        "nl",
        "fr",
        "de",
        "en"
      ]
    },
    "copyrightHolder": {
      "type": "string",
      "example": "publiq",
      "minLength": 3,
      "description": "The copyright holder of the video source."
    }
  },
  "required": [
    "url",
    "language"
  ]
}