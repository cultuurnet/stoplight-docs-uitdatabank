          "calendarType"
        ],
        "properties": {
          "calendarType": {
            "const": "multiple"
          }
        }
      },
      "then": {
        "required": [
          "subEvent"
        ]
      }
    },
    {
      "if": {
        "required": [
          "calendarType"
        ],
        "properties": {
          "calendarType": {
            "const": "periodic"
          }
        }
      },
      "then": {
        "required": [
          "startDate",
          "endDate"
        ]
      }
    }
  ],
